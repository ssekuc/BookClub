
<div class="container">
    <h1>Books List</h1>

    <div class="row vh-100 d-flex align-content-center py-0  flex-wrap">
        <div class="col">


     <a href="/add" id="addButton" class="btn btn-dark mb-1"><i class="fa-solid fa-circle-plus"></i> Add Books</a>
 
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
              
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Sipnosis</th>
                <th scope="col">Year</th>
                <th scope="col">TotalPages</th>
                <th scope="col">Edition</th>
                <th scope="col">Publisher</th>
                <th scope="col">cover</th>
               
            </tr>
        </thead>
        <tbody id="booksList">
            <!-- Repeatable Rows -->
            <% books.forEach((book) => { %>
                <!-- Create a new Table Row-->
           
      
                <td><%= book.Name %></td>
                <td><%= book.Author %></td>
                <td><%= book.Sipnosis %></td>
                <td><%= book.Year %></td>
                <td><%= book.TotalPages %></td>
                <td><%= book.Edition %></td>
                <td><%= book.Publisher %></td>
               
             
    
                <% }); %>
      
        </tbody>
    </table>
</div>
</div>
</div>

